<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class='register-container-middle'>
      <tr>
        <td><h4>Connection</h4></td>
      </tr>
      <tr>
        <td colspan='2' class='alert-danger'><%= render 'layouts/flash', :flash => flash %></td>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :password %><em>(min 8 chars)</em></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td>
          <%= render "user/shared/links" %></td>
        <td><%= f.submit 'Sign in', :class => 'btn btn-success', :style => 'width: 100%'%></td>
      </tr>
      <tr><td>
    </table>
<% end %>